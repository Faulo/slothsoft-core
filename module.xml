<?xml version="1.0"?>
<module xmlns="http://schema.slothsoft.net/farah/module" xmlns:sfm="http://schema.slothsoft.net/farah/module">
  <!--
Farah Module Manifest

Module: core
Vendor: slothsoft
Farah ID: farah://slothsoft@core
Composer ID: slothsoft/core

Homepage: http://farah.slothsoft.net/modules/core
Packagist: https://packagist.org/packages/slothsoft/core
GitHub: https://github.com/Faulo/slothsoft-core

Llo
-->
  <default-configuration/>
  <assets>
    <resource-directory name="data" path="data" type="application/x-php"/>
    <resource-directory name="css" path="stylesheet" type="text/css"/>
    <resource-directory name="js" path="script" type="application/javascript"/>
    <resource-directory name="xsl" path="template" type="application/xslt+xml"/>
    <resource-directory name="dictionary" path="dictionary" type="application/xml"/>
    <resource-directory name="pages" path="pages" type="application/xml"/>
    <directory name="static">
	    <resource name="language-registry" path="language-subtag-registry.xml" type="application/xml">
	      <source href="http://www.langtag.net/registries/language-subtag-registry.xml"/>
	    </resource>
	    <resource name="iso-639" path="iso-639.xml" type="application/xml">
	      <source href="http://www.loc.gov/standards/iso639-2/php/code_list.php"/>
	    </resource>
	    <resource name="unicode" path="ucd.all.flat.csv" type="text/csv">
	      <source href="http://unicode.org/Public/UNIDATA/UnicodeData.txt"/>
	      <options del=";" sep="" key-col="0" val-col="1" output="assoc"/>
	    </resource>
	    <resource name="unicode-all" path="ucd.all.flat.xml" type="application/xml">
	      <source href="http://www.unicode.org/Public/UCD/latest/ucdxml/ucd.all.flat.zip"/>
	    </resource>
	</directory>
    <fragment name="sitemap">
      <use-template ref="xsl/_sitemap"/>
      <use-document ref="static/sites"/>
    </fragment>
    <fragment name="ipLog">
      <use-template ref="xsl/_ipLog"/>
      <use-document ref="data/ipLog"/>
    </fragment>
    <fragment name="botLog">
      <use-template ref="xsl/_ipLog"/>
      <param name="bots" value="1"/>
      <use-document ref="data/ipLog"/>
    </fragment>
    <fragment name="userLog">
      <use-template ref="xsl/_ipLog"/>
      <use-document ref="data/ipLog"/>
    </fragment>
    <fragment name="language-backend">
      <use-template ref="xsl/_language-backend"/>
      <use-document ref="data/language-backend"/>
    </fragment>
    <fragment name="DOM">
      <use-script ref="js/DOM"/>
      <use-script ref="js/DOMHelper"/>
      <use-script ref="js/NS"/>
      <use-script ref="js/XPath"/>
      <use-script ref="js/XSLT"/>
      <import ref="js/HTML5"/>
    </fragment>
    <fragment name="HTML5">
      <use-stylesheet ref="css/HTML5"/>
    </fragment>
    <fragment name="XPath">
      <use-script ref="js/NS"/>
      <use-script ref="js/XPath"/>
    </fragment>
  </assets>
</module>
