{
    "name": "slothsoft/core",
    "description": "Core stuff.",
    "license": "WTFPL",
    "authors": [
        {
            "name": "Daniel Schulz",
            "email": "info.slothsoft@gmail.com"
        }
    ],
    "type": "library",
    "require": {
        "ext-curl": "*",
        "guzzlehttp/psr7": "^1.4",
        "php": "^7.2",
        "psr/http-message": "^1.0",
        "slothsoft/w3c": "dev-master"
    },
    "require-dev": {
        "phpunit/phpunit": "^6.5"
    },
    "suggests": {
        "ext-pthreads": ">=2.0"
    },
    "autoload": {
        "psr-0": {
            "Slothsoft\\Core\\": "src/"
        },
        "files": [
            "src/autoload.php"
        ]
    },
    "keywords": [
        "slothsoft",
        "docs"
    ],
    "autoload-dev": {
        "classmap": [
            "tests/"
        ]
    },
    "classmap-authoritative": false,
    "minimum-stability": "dev",
    "prefer-stable": true
}
